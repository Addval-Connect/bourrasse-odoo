<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="stock_picking_form_inherit_mrp_tweaks" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.mrp.tweaks</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="replace">
                <field
                    name="origin"
                    attrs="{
                        'readonly': [('state', 'in', ['done', 'cancel'])],
                        'invisible': False,
                    }"
                />
                <field
                    name="sale_id"
                    attrs="{
                        'readonly': [('state', 'in', ['done', 'cancel'])],
                        'invisible': False,
                    }"
                />
            </xpath>
        </field>
    </record>
</odoo>
