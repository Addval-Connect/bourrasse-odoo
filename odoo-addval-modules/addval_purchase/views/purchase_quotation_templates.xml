<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchasequotation_document" inherit_id="purchase.report_purchasequotation_document" priority="20">
        <t t-set="address" position="replace"/>
        <xpath expr="//t[@t-set='information_block']/.." position="replace"/>
        <xpath expr="//t[@t-else='']" position="replace"/>
        <t t-set="o" position="after">
            <t t-set="header_data" t-value="o.get_header_data()"/>
            <t t-set="custom_header" t-value="'addval_accounting.custom_header'"/>
        </t>
        <xpath expr="//div[@class='page']/h2[1]" position="replace"/>
        <div class="oe_structure" position="replace"/>
        <xpath expr="//table[@class='table table-sm']" position="before">
            <t t-set="invoice_data" t-value="o.get_invoice_data()"/>
            <t t-call="addval_purchase.purchase_informations"/>
        </xpath>
        <xpath expr="//table[@class='table table-sm']" position="attributes">
            <attribute name="class">table table-sm o_main_table small</attribute>
        </xpath>
        <span t-field="order_line.date_planned" position="replace">
            <span t-field="order_line.date_planned" t-options='{"widget": "date"}'/>
        </span>
        <td class="text-center" position="attributes">
            <attribute name="class">text-right</attribute>
        </td>
        <xpath expr="//td[@class='text-right']/span" position="attributes">
            <attribute name="class">text-nowrap</attribute>
        </xpath>
        <th name="th_quantity" position="replace"/>
        <th name="th_description" position="after">
            <th name="th_quantity" class="text-right"><strong>Qty</strong></th>
        </th>
        <xpath expr="//span[@t-field='order_line.product_qty']/.." position="replace"/>
        <xpath expr="//td[@id='product']" position="after">
            <td class="text-right">
                    <span t-field="order_line.product_qty"/>
                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                </td>
        </xpath>
    </template>
</odoo>