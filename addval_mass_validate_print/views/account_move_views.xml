<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_out_invoice_mass_validate_print_tree" model="ir.ui.view">
        <field name="name">account.out.invoice.mass.validate.print.tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/header/button[@name='action_register_payment']" position="after">
                <button name="action_mass_validate"
                        type="object"
                        string="Bulk Validate"
                        groups="account.group_account_user"
                        invisible="context.get('default_move_type') not in ('out_invoice')" />
                <button name="action_mass_print" type="object" string="Bulk Print"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_add_default_journal_form" model="ir.ui.view">
        <field name="name">account.move.add.default.journal.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="action_reverse" position="attributes">
                <attribute name="context">{'is_from_credit_note': True}</attribute>
            </button>
        </field>
    </record>

</odoo>
