<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <template id="stock_informations" inherit_id="l10n_cl_edi_stock.stock_informations">
            <xpath expr="//div[@id='informations']/div[2]/strong[1]" position="replace">
                <strong>Address:</strong>
            </xpath>
            <span t-field="o.partner_id.name" position="replace">
                <t t-if="o.partner_id.parent_name">
                    <span t-field="o.partner_id.parent_name" />
                </t>
                <t t-else="">
                    <span t-field="o.partner_id.name" />
                </t>
            </span>
        </template>

        <template id="delivery_guide_document" inherit_id="l10n_cl_edi_stock.delivery_guide_document">
            <th name='th_code' position="replace"/>
            <xpath expr="//t[@t-foreach='o.move_lines']/tr/td[1]" position="replace"/>       
            <th name='th_product' position="replace">
                <th name='th_description'>
                    <strong>Description</strong>
                </th>
            </th>
            <xpath expr="//t[@t-foreach='o.move_lines']/tr/td[2]" position="replace">
                <td>
                    <span t-field="line.product_id.name"/>
                    <br/>
                    <span t-field="line.product_id.description"/>
                </td>
            </xpath>
        </template>

    </data>
</odoo>
